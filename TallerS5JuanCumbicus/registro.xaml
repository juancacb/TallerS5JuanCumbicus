<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerS5JuanCumbicus.registro"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ventana de registro" />
            <Entry x:Name="txtid" Placeholder="Id" Keyboard="Numeric"/>
            <Entry x:Name="txtnombre" Placeholder="Nombre"/>
            <Entry x:Name="txtapellido" Placeholder="Apellido" />
            <Entry x:Name="txtedad" Placeholder="Edad" Keyboard="Numeric"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btninsertar" Text="Insertar" Clicked="btninsertar_Clicked" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="btncancelar" Text="Cancelar" Clicked="btncancelar_Clicked"  Grid.Row="0" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>